<main>
    <!-- Trending Area Start -->
    <div class="trending-area fix">
        <div class="container">
            <div class="trending-main">
                <!-- Trending Tittle -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="trending-tittle">
                            <strong>Trending now</strong>
                            <!-- <p>Rem ipsum dolor sit amet, consectetur adipisicing elit.</p> -->
                            <div class="trending-animated">
                                <ul id="js-news" class="js-hidden">
                                    <li class="news-item">🎉 Chào mừng bạn đến với hệ thống ôn tập và thi trực tuyến!</li>
                                    <li class="news-item">📢 Đề thi thử môn Toán đã được cập nhật, hãy vào luyện tập ngay.</li>
                                    <li class="news-item">💡 Mẹo học tập: Ôn luyện 30 phút mỗi ngày hiệu quả hơn học dồn nhiều giờ.</li>
                                    <li class="news-item">⏰ Hãy kiểm tra lịch thi thử mới nhất trong mục "Đề thi".</li>
                                    <li class="news-item">🏆 Top 5 học viên có điểm cao nhất tuần này đã được công bố!</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8">
                        @await Component.InvokeAsync("TrendingExam")
                    </div>
                    <!-- Right content: Top học viên xuất sắc -->
                    @await Component.InvokeAsync("TopStudents")
                </div>
            </div>
        </div>
    </div>
    <!-- Trending Area End -->
    <!--   Weekly-Exams start -->
    <div class="weekly-news-area pt-50">
        <div class="container">
            <div class="weekly-wrapper">
                <!-- Section Title -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-tittle mb-30">
                            <h3>Đề thi nổi bật trong tuần</h3>
                        </div>
                    </div>
                </div>
                <!-- Carousel -->
                
                @await Component.InvokeAsync("TrendingExamWeekly")
            </div>
        </div>
    </div><!-- End Weekly-Exams -->

    <!-- What's New Start -->
    @await Component.InvokeAsync("NewExam")
    <!-- What's New End -->

    <!-- Latest Documents Start -->
    ?
</main>