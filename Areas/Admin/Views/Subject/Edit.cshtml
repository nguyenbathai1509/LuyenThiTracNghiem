@model LuyenThiTracNghiem.Areas.Admin.Models.tblSubject
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main">
    <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Edit Subject</h2>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All"></div>

        <input type="hidden" asp-for="SubjectId" class="form-control"/>

        <div class="mb-3">
            <label asp-for="SubjectId" class="form-label"></label>
            <input asp-for="SubjectId" class="form-control" disabled/>
            <span asp-validation-for="SubjectId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SubjectName" class="form-label"></label>
            <input asp-for="SubjectName" class="form-control" />
            <span asp-validation-for="SubjectName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Image</label>
            <input type="file" name="ImageFile" class="form-control" accept=".jpg,.jpeg,.png,.gif" />
        </div>

        <div class="mb-3 form-check">
            <input asp-for="Status" class="form-check-input" />
            <label asp-for="Status" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</main>
