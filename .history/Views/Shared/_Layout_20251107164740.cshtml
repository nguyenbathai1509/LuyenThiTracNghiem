@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!doctype html>
    <html class="no-js" lang="zxx">

    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>News HTML-5 Template </title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="manifest" href="site.webmanifest">
        <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.ico">

        <!-- CSS here -->
        <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
        <link rel="stylesheet" href="~/assets/css/owl.carousel.min.css">
        <link rel="stylesheet" href="~/assets/css/ticker-style.css">
        <link rel="stylesheet" href="~/assets/css/flaticon.css">
        <link rel="stylesheet" href="~/assets/css/slicknav.css">
        <link rel="stylesheet" href="~/assets/css/animate.min.css">
        <link rel="stylesheet" href="~/assets/css/magnific-popup.css">
        <link rel="stylesheet" href="~/assets/css/fontawesome-all.min.css">
        <link rel="stylesheet" href="~/assets/css/themify-icons.css">
        <link rel="stylesheet" href="~/assets/css/slick.css">
        <link rel="stylesheet" href="~/assets/css/nice-select.css">
        <link rel="stylesheet" href="~/assets/css/style.css">
        <link rel="stylesheet" href="~/assets/css/register-user.css" />
        <link rel="stylesheet" href="~/assets/css/main-user.css" />
    </head>

    <body>

        <header>
            <div class="header-area">
                <div class="main-header ">
                    <!-- Header Top -->
                    <div class="header-top black-bg">
                        <div class="container">
                            <div class="row d-flex justify-content-between align-items-center">
                                <!-- Left: thời tiết và ngày -->
                                <div class="header-info-left d-none d-md-flex">
                                    <ul class="mb-0">
                                        <li><img src="~/assets/img/icon/header_icon1.png" alt="">34ºc, Sunny</li>
                                        <li><img src="~/assets/img/icon/header_icon1.png" alt="">Tuesday, 18th June, 2019</li>
                                    </ul>
                                </div>

                                <!-- Right: social + login/register -->
                                <div class="header-info-right d-flex align-items-center">
                                    <!-- Social icons (desktop) -->
                                    <ul class="header-social mb-0 me-3 d-none d-md-flex">
                                        <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                        <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                                        <li><a href="#"><i class="fab fa-pinterest-p"></i></a></li>
                                    </ul>

                                    <!-- Login/Register or User Dropdown (desktop) -->
                                    <ul style="margin-left: 20px;" class="header-social mb-0 d-none d-md-flex">
                                        @if (HttpContextAccessor.HttpContext?.Session.GetString("FullName") != null)
                                        {
                                            <li class="nav-item dropdown">
                                                <a class="nav-link dropdown-toggle text-light fw-semibold px-3 py-2 rounded"
                                                href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                                                style="background-color: rgba(255, 255, 255, 0.1); transition: 0.2s;">
                                                    <i class="fas fa-user me-2"></i> @HttpContextAccessor.HttpContext.Session.GetString("FullName")
                                                </a>
                                                <div class="dropdown-menu dropdown-menu-right shadow border-0 rounded-3 mt-2"
                                                    aria-labelledby="userDropdown" style="min-width: 220px;">
                                                    <h6 class="dropdown-header text-muted mb-2 px-3" style="font-size: 0.8rem;">
                                                        Tài khoản của bạn
                                                    </h6>
                                                    <a class="dropdown-item d-flex align-items-center text-dark py-2 px-3" href="/Profile"
                                                    style="transition: all 0.2s ease; border-radius: 6px;">
                                                        <i class="fas fa-user-circle me-3 text-primary"></i>
                                                        <span>Thông tin cá nhân</span>
                                                        <small class="text-muted ms-auto">›</small>
                                                    </a>
                                                    <a class="dropdown-item d-flex align-items-center text-dark py-2 px-3" href="/Payment"
                                                    style="transition: all 0.2s ease; border-radius: 6px;">
                                                        <i class="fas fa-user-circle me-3 text-primary"></i>
                                                        <span>Nạp tiền vào tài khoản</span>
                                                        <small class="text-muted ms-auto">›</small>
                                                    </a>
                                                    <a class="dropdown-item d-flex align-items-center text-dark py-2 px-3" href="/ChangePassword"
                                                    style="transition: all 0.2s ease; border-radius: 6px;">
                                                        <i class="fas fa-key me-3 text-warning"></i>
                                                        <span>Đổi mật khẩu</span>
                                                        <small class="text-muted ms-auto">›</small>
                                                    </a>
                                                    <div class="dropdown-divider my-2"></div>
                                                    <a class="dropdown-item d-flex align-items-center text-danger fw-medium py-2 px-3" href="/Login/Logout"
                                                    style="transition: all 0.2s ease; border-radius: 6px;">
                                                        <i class="fas fa-sign-out-alt me-3"></i>
                                                        <span>Đăng xuất</span>
                                                        <small class="text-muted ms-auto">›</small>
                                                    </a>
                                                </div>
                                            </li>
                                        }
                                        else
                                        {
                                            <li><a href="~/Login">Đăng nhập</a></li>
                                            <li><a href="~/Register">Đăng ký</a></li>
                                        }
                                    </ul>
                                </div>

                            </div>
                        </div>
                    </div>

                    <!-- Header Bottom -->
                    <div class="header-bottom header-sticky">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-xl-10 col-lg-10 col-md-12 header-flex">
                                    <!-- Logo -->
                                    <div class="sticky-logo">
                                        <a href="~/"><img src="~/assets/img/logo/logo.png" alt=""></a>
                                    </div>
                                    <!-- Main-menu -->
                                    <div class="main-menu d-none d-md-block">
                                        <nav>
                                            <ul id="navigation">
                                                <li><a href="~/">Home</a></li>
                                                <li><a href="~/Category">Category</a></li>
                                                <li><a href="~/About">About</a></li>
                                                <li><a href="~/News">Latest News</a></li>
                                                <li><a href="~/Contact">Contact</a></li>
                                                <li class="d-md-none">
                                                    @if (HttpContextAccessor.HttpContext?.Session.GetString("FullName") != null)
                                                    {
                                                        <a href="#">@HttpContextAccessor.HttpContext.Session.GetString("FullName")</a>
                                                        <ul class="submenu">
                                                            <li><a href="/Profile">Thông tin cá nhân</a></li>
                                                            <li><a href="/ChangePassword">Đổi mật khẩu</a></li>
                                                            <li><a href="/Login/Logout">Đăng xuất</a></li>
                                                        </ul>
                                                    }
                                                    else
                                                    {
                                                        <a href="~/Login">Đăng nhập</a>
                                                        <a href="~/Register">Đăng ký</a>
                                                    }
                                                </li>
                                            </ul>
                                        </nav>
                                    </div>
                                </div>

                                <!-- Search + Mobile Menu -->
                                <div class="col-xl-2 col-lg-2 col-md-4">
                                    <div class="header-right-btn f-right d-none d-lg-block">
                                        <i class="fas fa-search special-tag"></i>
                                        <div class="search-box">
                                            <form action="#">
                                                <input type="text" placeholder="Search">
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="mobile_menu d-block d-md-none"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>


        <!--Begin Main-->
        @RenderBody()
        <!--End Main-->

        <footer>
            <!-- Footer Start-->
            <div class="footer-area footer-padding fix">
                <div class="container">
                    <div class="row d-flex justify-content-between">
                        <div class="col-xl-5 col-lg-5 col-md-7 col-sm-12">
                            <div class="single-footer-caption">
                                <div class="single-footer-caption">
                                    <!-- logo -->
                                    <div class="footer-logo">
                                        <a href="/"><img src="~/assets/img/logo/logo2_footer.png" alt="Logo Luyện Thi"></a>
                                    </div>
                                    <div class="footer-tittle">
                                        <div class="footer-pera">
                                            <p>
                                                LuyệnThiTracNghiem — nền tảng ôn thi trực tuyến dành cho học sinh và sinh viên.
                                                Chúng tôi cung cấp ngân hàng đề phong phú, đề thi thử sát đề, thống kê kết quả
                                                và gợi ý học tập cá nhân hoá để giúp bạn đạt điểm cao hơn trong kỳ thi.
                                            </p>
                                        </div>
                                    </div>
                                    <!-- social -->
                                    <div class="footer-social">
                                        <a href="#" title="Twitter"><i class="fab fa-twitter"></i></a>
                                        <a href="#" title="Instagram"><i class="fab fa-instagram"></i></a>
                                        <a href="#" title="Facebook"><i class="fab fa-facebook-f"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-3 col-md-4  col-sm-6">
                            <div class="single-footer-caption mt-60">
                                <div class="footer-tittle">
                                    <h4>Đăng ký nhận tin</h4>
                                    <p>Nhận đề mới, mẹo làm bài và thông báo tuyển sinh qua email.</p>
                                    <!-- Form -->
                                    <div class="footer-form">
                                        <div id="mc_embed_signup">
                                            <form target="_blank"
                                                action="https://spondonit.us12.list-manage.com/subscribe/post?u=1462626880ade1ac87bd9c93a&amp;id=92a4423d01"
                                                method="get" class="subscribe_form relative mail_part">
                                                <input type="email" name="email" id="newsletter-form-email"
                                                    placeholder="Nhập email của bạn" class="placeholder hide-on-focus"
                                                    onfocus="this.placeholder = ''"
                                                    onblur="this.placeholder = ' Nhập email của bạn '">
                                                <div class="form-icon">
                                                    <button type="submit" name="submit" id="newsletter-submit"
                                                        class="email_icon newsletter-submit button-contactForm">
                                                        <img src="~/assets/img/logo/form-iocn.png" alt="Gửi">
                                                    </button>
                                                </div>
                                                <div class="mt-10 info"></div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-3 col-md-5 col-sm-6">
                            <div class="single-footer-caption mb-50 mt-60">
                                <div class="footer-tittle">
                                    <h4>Hình ảnh minh hoạ</h4>
                                </div>
                                <div class="instagram-gellay">
                                    <ul class="insta-feed">
                                        <li><a href="#"><img src="~/assets/img/post/instra1.jpg" alt="Bài tập Toán"></a></li>
                                        <li><a href="#"><img src="~/assets/img/post/instra2.jpg" alt="Bài tập Lý"></a></li>
                                        <li><a href="#"><img src="~/assets/img/post/instra3.jpg" alt="Bài tập Anh"></a></li>
                                        <li><a href="#"><img src="~/assets/img/post/instra4.jpg" alt="Mẹo làm bài"></a></li>
                                        <li><a href="#"><img src="~/assets/img/post/instra5.jpg" alt="Đề thi mẫu"></a></li>
                                        <li><a href="#"><img src="~/assets/img/post/instra6.jpg" alt="Lời khuyên ôn tập"></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- footer-bottom area -->
            <div class="footer-bottom-area">
                <div class="container">
                    <div class="footer-border">
                        <div class="row d-flex align-items-center justify-content-between">
                            <div class="col-lg-6">
                                <div class="footer-copy-right">
                                    <p>
                                        Copyright &copy;
                                        <script>document.write(new Date().getFullYear());</script> LuyệnThiTracNghiem. All rights reserved.
                                        <br />
                                        Thiết kế và phát triển bởi đội ngũ LuyệnThi — Hỗ trợ ôn tập, kiểm tra và phân tích kết quả.
                                    </p>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="footer-menu f-right">
                                    <ul>
                                        <li><a href="/terms">Điều khoản sử dụng</a></li>
                                        <li><a href="/privacy">Chính sách bảo mật</a></li>
                                        <li><a href="/contact">Liên hệ</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer End-->
        </footer>
        <!-- JS here -->

        <!-- All JS Custom Plugins -->
        <script src="~/assets/js/vendor/modernizr-3.5.0.min.js"></script>
        <script src="~/assets/js/vendor/jquery-1.12.4.min.js"></script>
        <script src="~/assets/js/popper.min.js"></script>
        <script src="~/assets/js/bootstrap.min.js"></script>
        <script src="~/assets/js/jquery.slicknav.min.js"></script>

        <script src="~/assets/js/owl.carousel.min.js"></script>
        <script src="~/assets/js/slick.min.js"></script>
        <script src="~/assets/js/gijgo.min.js"></script>

        <script src="~/assets/js/wow.min.js"></script>
        <script src="~/assets/js/animated.headline.js"></script>
        <script src="~/assets/js/jquery.magnific-popup.js"></script>

        <script src="~/assets/js/jquery.ticker.js"></script>
        <script src="~/assets/js/site.js"></script>

        <script src="~/assets/js/jquery.scrollUp.min.js"></script>
        <script src="~/assets/js/jquery.nice-select.min.js"></script>
        <script src="~/assets/js/jquery.sticky.js"></script>

        <script src="~/assets/js/contact.js"></script>
        <script src="~/assets/js/jquery.form.js"></script>
        <script src="~/assets/js/jquery.validate.min.js"></script>
        <script src="~/assets/js/mail-script.js"></script>
        <script src="~/assets/js/jquery.ajaxchimp.min.js"></script>

        <script src="~/assets/js/plugins.js"></script>
        <script src="~/assets/js/main.js"></script>
        <script src="~/assets/js/main-user.js"></script>

    </body>

</html>