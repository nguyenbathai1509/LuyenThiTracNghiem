@{
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-primary text-white">
                    <h3>Đăng nhập</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }
                    <form id="loginForm" method="post">
                        <div class="mb-3">
                            <label for="Username" class="form-label">Tên đăng nhập</label>
                            <input type="text" name="Username" id="Username" class="form-control" required />
                            <div class="text-danger mt-1" id="UsernameError"></div>
                        </div>

                        <div class="mb-3">
                            <label for="PasswordHash" class="form-label">Mật khẩu</label>
                            <input type="password" name="PasswordHash" id="PasswordHash" class="form-control" required />
                            <div class="text-danger mt-1" id="PasswordHashError"></div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <small>Chưa có tài khoản? <a class="lg" href="~/Register">Đăng ký</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/assets/js/login-validation.js"></script>
