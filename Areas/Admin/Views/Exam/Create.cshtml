@model LuyenThiTracNghiem.Areas.Admin.Models.tblExam
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main">
    <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Create Exam</h2>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All"></div>

        <div class="mb-3">
            <label asp-for="ExamName" class="form-label"></label>
            <input asp-for="ExamName" class="form-control" />
            <span asp-validation-for="ExamName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="QuestionCount" class="form-label"></label>
            <input asp-for="QuestionCount" type="number" class="form-control" />
            <span asp-validation-for="QuestionCount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DurationMinutes" class="form-label"></label>
            <input asp-for="DurationMinutes" type="number" class="form-control" />
            <span asp-validation-for="DurationMinutes" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ExamType" class="form-label"></label>
            <select asp-for="ExamType" class="form-select">
                <option value="">-- Select Type --</option>
                <option value="Thử nghiệm">Thử nghiệm</option>
                <option value="Chính thức">Chính thức</option>
            </select>
            <span asp-validation-for="ExamType" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label asp-for="ExamFee" class="form-label"></label>
            <input asp-for="ExamFee" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="ExamFee" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Image</label>
            <input type="file" name="ImageFile" class="form-control" accept=".jpg,.jpeg,.png,.gif" />
        </div>

        <div class="mb-3">
            <label asp-for="SubjectId" class="form-label"></label>
            <select asp-for="SubjectId" class="form-select" 
                asp-items="ViewBag.sjList">
            </select>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="Status" class="form-check-input" />
            <label asp-for="Status" class="form-check-label"></label>
        </div>



        <button type="submit" class="btn btn-success">Add Exam</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</main>
