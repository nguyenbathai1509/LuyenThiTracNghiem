@using LuyenThiTracNghiem.Areas.Admin.Models
@using LuyenThiTracNghiem.Models
@model PagedResult<tblSubject>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Subject Management</h2>
        <a class="btn btn-primary mb-2" asp-area="Admin" asp-controller="Subject" asp-action="Create">
            <i class="fas fa-plus me-2"></i>Add Subject
        </a>
    </div>

    <!-- Search Box -->
    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="search-container">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" class="form-control" placeholder="Search subjects..." id="searchInput">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Danh sÃ¡ch Subject -->
    <div id="subjectList">
        @await Html.PartialAsync("_SubjectListPartial", Model)
    </div>
</main>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script src="~/admin/assets/js/subject-index.js"></script>