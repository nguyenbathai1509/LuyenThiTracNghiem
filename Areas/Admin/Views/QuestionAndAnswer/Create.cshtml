@model LuyenThiTracNghiem.Areas.Admin.Models.QuestionCreateViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Add Question</h2>
        <a class="btn btn-primary mb-2" asp-area="Admin" asp-controller="QuestionAndAnswer" asp-action="UploadQuestions">
            <i class="fas fa-plus me-2"></i>Upload File
        </a>
    </div>

    <!-- Thông báo -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Chọn môn học -->
        <div class="mb-3">
            <label asp-for="SubjectId" class="form-label"></label>
            <select asp-for="SubjectId" class="form-select" asp-items="ViewBag.Subjects">
                <option value="">-- Select Subject --</option>
            </select>
            <span asp-validation-for="SubjectId" class="text-danger"></span>
        </div>

        <!-- Nội dung câu hỏi -->
        <div class="mb-3">
            <label asp-for="QuestionText" class="form-label"></label>
            <textarea asp-for="QuestionText" class="form-control" rows="3" placeholder="Enter question text..."></textarea>
            <span asp-validation-for="QuestionText" class="text-danger"></span>
        </div>

        <!-- Chọn độ khó -->
        <div class="mb-3">
            <label asp-for="Level" class="form-label"></label>
            <select asp-for="Level" class="form-select">
                <option value="">-- Select Level --</option>
                <option value="1">Easy</option>
                <option value="2">Medium</option>
                <option value="3">Hard</option>
            </select>
            <span asp-validation-for="Level" class="text-danger"></span>
        </div>

        <!-- Trạng thái -->
        <div class="form-check mb-3">
            <input asp-for="Status" class="form-check-input" />
            <label asp-for="Status" class="form-check-label"></label>
        </div>

        <hr />

        <!-- Nhập đáp án -->
        <h5>Answers</h5>
        <p class="text-muted">Chọn đáp án đúng</p>

        <div id="answerContainer">
            @for (int i = 0; i < Model.Answers.Count; i++)
            {
                <div class="mb-3 d-flex align-items-center gap-2">
                    <input asp-for="Answers[@i].AnswerText" class="form-control" placeholder="Enter answer..." />
                    <span asp-validation-for="Answers[@i].AnswerText" class="text-danger"></span>
                    <div class="form-check">
                        <input type="radio" asp-for="CorrectAnswer" value="@i" class="form-check-input" />
                        <label class="form-check-label">Correct</label>
                    </div>
                </div>
            }
        </div>
        <span asp-validation-for="CorrectAnswer" class="text-danger"></span>

        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save me-1"></i> Add Question
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back
            </a>
        </div>
    </form>
</main>
