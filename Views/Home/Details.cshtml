@model LuyenThiTracNghiem.Areas.Admin.Models.tblExam

@{
    Layout = "_Layout";
}

<section class="exam-details-area pt-50 pb-50">
    <div class="container">
        <div class="row">
            <!-- Left: thông tin chính -->
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="row g-0">
                        <div class="col-md-5">
                            <img src="@Html.DisplayFor(model => model.Image)" class="img-fluid rounded-start" alt="@Html.DisplayFor(model => model.ExamName)"/>
                        </div>
                        <div class="col-md-7">
                            <div class="card-body">
                                <h2 class="card-title">@Html.DisplayFor(model => model.ExamName)</h2>
                                <p class="card-text text-muted mb-2">
                                    <strong>Loại đề:</strong> @Html.DisplayFor(model => model.ExamType)
                                    &nbsp;•&nbsp;
                                    <strong>Mã môn học:</strong> @Html.DisplayFor(model => model.SubjectId)
                                </p>

                                <p class="card-text">@Html.Raw(string.IsNullOrEmpty(Model.Description) ? "<em>Không có mô tả</em>" : Html.Encode(Model.Description).Replace("\n", "<br/>"))</p>

                                <ul class="list-unstyled mt-3 mb-0">
                                    <li><strong>Số câu:</strong> @Model.QuestionCount</li>
                                    <li><strong>Thời gian:</strong> @Model.DurationMinutes phút</li>
                                    <li>
                                        <strong>Phí thi: </strong>
                                        @if (Model.ExamFee > 0)
                                        {
                                            <span style="display:inline;"> @Model.ExamFee.ToString("N0") VNĐ</span>
                                        }
                                        else
                                        {
                                            <span style="display:inline;"> Miễn phí</span>
                                        }
                                    </li>
                                </ul>

                                <div class="mt-3">
                                    <form asp-controller="Exam" asp-action="Start" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@Model.ExamId" />
                                        <button type="submit" class="btn btn-primary btn-lg">
                                            <i class="fas fa-pencil-alt me-2"></i> Làm bài
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Thông tin chi tiết thêm (nếu cần) -->
                <div class="card mb-4">
                    <div class="card-header">
                        Thông tin chi tiết
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Trạng thái</dt>
                            <dd class="col-sm-8">@((Model.Status) ? "Hoạt động" : "Không hoạt động")</dd>

                            <dt class="col-sm-4">Tạo lúc</dt>
                            <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm") bởi @Html.Encode(Model.CreatedBy)</dd>

                            <dt class="col-sm-4">Cập nhật</dt>
                            <dd class="col-sm-8">
                                @(Model.UpdatedAt.HasValue ? (Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm") + " bởi " + Html.Encode(Model.UpdatedBy ?? "-")) : "-")
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- Right: sidebar (gợi ý, thống kê, yêu cầu) -->
            <div class="col-lg-4">
                <div class="card mb-3">
                    <div class="card-header">Gợi ý trước khi thi</div>
                    <div class="card-body">
                        <ul>
                            <li>Kiểm tra thời gian: @Model.DurationMinutes phút.</li>
                            <li>Chuẩn bị giấy nháp và bút.</li>
                            <li>Đảm bảo đường truyền Internet ổn định.</li>
                            <li>Nếu đề có phí, bạn sẽ phải trả phí (số dư phải đủ để thanh toán phí thi, cân nhắc trước khi bấm nút làm bài).</li>
                        </ul>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header">Thông tin nhanh</div>
                    <div class="card-body">
                        <p class="mb-1"><strong>Mã đề:</strong> @Model.ExamId</p>
                        <p class="mb-1"><strong>Số câu:</strong> @Model.QuestionCount</p>
                        <p class="mb-1"><strong>Thời gian:</strong> @Model.DurationMinutes phút</p>
                        <p class="mb-1"><strong>Phí:</strong> @(Model.ExamFee > 0 ? Model.ExamFee.ToString("N0") + " VNĐ" : "Miễn phí")</p>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">Hỗ trợ</div>
                    <div class="card-body">
                        <p>Nếu gặp sự cố khi làm bài, liên hệ: </p>
                        <p>Emai hỗ trợ: <strong>support@example.com</strong></p>
                        <p>Điện thoại hỗ trợ: <strong>0123-456-789</strong></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
