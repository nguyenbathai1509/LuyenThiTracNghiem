@model LuyenThiTracNghiem.Models.tblUser
@{
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-info text-white">
                    <h3>Đổi mật khẩu</h3>
                </div>
                <div class="card-body">

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form id="changePasswordForm" method="post">
                        <div class="mb-3">
                            <label for="OldPassword" class="form-label">Mật khẩu cũ</label>
                            <input type="password" class="form-control" id="OldPassword" name="OldPassword" required />
                            <div class="text-danger mt-1" id="OldPasswordError"></div>
                        </div>
                        <div class="mb-3">
                            <label for="NewPassword" class="form-label">Mật khẩu mới</label>
                            <input type="password" class="form-control" id="NewPassword" name="NewPassword" required />
                            <div class="text-danger mt-1" id="NewPasswordError"></div>
                        </div>
                        <div class="mb-3">
                            <label for="ConfirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
                            <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" required />
                            <div class="text-danger mt-1" id="ConfirmPasswordError"></div>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Đổi mật khẩu</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/assets/js/change-password.js"></script>
