@using LuyenThiTracNghiem.Areas.Admin.Models
@model IList<tblAdminMenu>

<aside id="sidebar" class="sidebar">

    <ul class="sidebar-nav" id="sidebar-nav">

        <li class="nav-item">
            <a class="nav-link " href="index.html">
                <i class="bi bi-grid"></i>
                <span>Control panel</span>
            </a>
        </li>
        @{
            int i = 1;
            @foreach(var item in Model.Where(m => m.ItemLevel == 1).OrderBy(m => m.ItemOrder)){
                var pID = item.AdminMenuID;
                var sMenu = Model.Where(p => p.ParentLevel == pID).OrderBy(p => p.ItemOrder).ToList();
                <li class="nav-item">
                    @if(sMenu.Any()){
                        <a class="nav-link collapsed" data-bs-target="#Menu-@i" data-bs-toggle="collapse" href="/Admin/@item.ControllerName">
                            <i class="bi bi-menu-button-wide"></i><span>@item.ItemName</span>
                            <i class="bi bi-chevron-down ms-auto"></i>
                        </a>
                        <ul id="Menu-@i" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                            @foreach(var smn in sMenu){
                                <li>
                                    <a href="/Admin/@smn.ControllerName">
                                        <i class="bi bi-circle"></i><span>@smn.ItemName</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    }else{
                        <a class="nav-link" data-bs-target="#Menu-@i" href="/Admin/@item.ControllerName">
                            <i class="bi bi-menu-button-wide"></i><span>@item.ItemName</span>
                        </a>
                    }
                    
                </li>
                i++;
            }
        }   
    </ul>
</aside>