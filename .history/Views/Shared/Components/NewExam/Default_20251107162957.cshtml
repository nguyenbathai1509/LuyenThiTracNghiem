@model IEnumerable<dynamic>

<section class="whats-news-area pt-50 pb-20">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <!-- Tab Content -->
                <div class="tab-content" id="nav-tabContent">
                    <!-- Tab All -->
                    <div class="tab-pane fade show active" id="all" role="tabpanel">
                        
                        @foreach (var exam in Model)
                        {
                            <div class="row">
                                <div class="col-lg-4 col-md-6 mb-4">
                                    <div class="exam-card">
                                        <img src="@(Url.Content(exam.Image ?? "/images/default-exam.png"))"
                                            alt="@exam.ExamName"
                                        />
                                        <div class="card-body">
                                            <span class="color1">@exam.SubjectName</span>
                                            <h5><a href="@exam.ExamId">@exam.ExamName</a></h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        
                    </div>


                </div>
                <!-- End Tab Content -->
            </div>
        </div>
    </div>
</section>